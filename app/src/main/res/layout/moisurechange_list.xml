<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardview:cardCornerRadius="0sp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_colorMoisture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/green_gradient"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"

                card_view:srcCompat="@drawable/lowchange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_moisture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Humedad 85%"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/whiteapp"/>

                <TextView
                    android:id="@+id/tv_time_moisture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hoy, 15:00"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="@color/whiteapp"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>



</LinearLayout>